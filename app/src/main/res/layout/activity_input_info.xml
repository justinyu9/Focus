<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmps121.focus.input_info"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="388dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="13dp" />

    <EditText
        android:id="@+id/taskName"
        android:layout_width="349dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:focusedByDefault="true"
        android:hint="Title"
        android:inputType="text"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:text="hours"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/startTime"
        android:layout_marginLeft="29dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="125dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/typeSpin"
        android:layout_width="202dp"
        android:layout_height="33dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp" />

    <Spinner
        android:id="@+id/reminderSpin"
        android:layout_width="181dp"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="388dp" />

    <Spinner
        android:id="@+id/startTime"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp" />

    <Spinner
        android:id="@+id/DueSpinner"
        android:layout_width="196dp"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/DueDate"
        android:layout_marginLeft="54dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="182dp" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done!"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="85dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="59dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/timeicon"
        app:layout_constraintRight_toLeftOf="@+id/textView4"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="5dp"
        app:srcCompat="@drawable/typeicon"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp" />

    <TextView
        android:id="@+id/DueDate"
        android:layout_width="43dp"
        android:layout_height="29dp"
        android:text="Due:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="56dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/duedateicon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="173dp" />

    <TextView
        android:id="@+id/Difficulty"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:text="Difficulty:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="247dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/difficultyicon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Spinner
        android:id="@+id/DifficultSpinner"
        android:layout_width="180dp"
        android:layout_height="33dp"
        app:layout_constraintLeft_toRightOf="@+id/Difficulty"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="247dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/importanticon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="312dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:text="Level of Importance:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="312dp" />

    <Spinner
        android:id="@+id/ImportanceSpinner"
        android:layout_width="65dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="312dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/remindicon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="372dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982" />


</android.support.constraint.ConstraintLayout>